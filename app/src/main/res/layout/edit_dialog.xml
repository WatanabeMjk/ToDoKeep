<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/dialogcustom">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="70"
        android:id="@+id/radioGroup"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:checked="true"
            android:id="@+id/first"
            android:layout_weight="10"
            android:background="@color/listview_back_white"/>

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:background="@color/listview_back_red"
            android:layout_weight="10"
            android:id="@+id/second"/>

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:background="@color/listview_back_blue"
            android:id="@+id/third"
            android:layout_weight="10"/>

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:id="@+id/fourth"
            android:background="@color/listview_back_orange"
            android:layout_weight="10"/>

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:background="@color/listview_back_green"
            android:id="@+id/fifth"
            android:layout_weight="10"/>

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:id="@+id/sixth"
            android:background="@color/listview_back_pink"
            android:layout_weight="10"/>

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:id="@+id/seventh"
            android:background="@color/listview_back_yellow"
            android:layout_weight="10"/>
    </RadioGroup>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titleText"
        android:textColorHint="#5E5E5E"
        android:textColor="#121212"
        android:hint="@string/title"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detailText"
        android:textColor="#121212"
        android:hint="@string/detail"
        android:textColorHint="#5E5E5E"/>

</LinearLayout>